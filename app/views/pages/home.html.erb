<div class="form">
  <div class="banner"><h1 class="bannerHead">Chore Survival</h1></div>

  <div class="formBackground">
    <div class="fill"></div>
    <div class="buffer">





    <% if @current_user.present? %>
      <%= link_to 'Chores', chores_path %>
      <%= link_to 'Create Chore', new_chore_path %>
      <%= link_to 'Assign Chore', chores_assign_path %>
      <p>Welcome back <%= @current_user.email %></p>
    <% else %>
      Sign in to play!
    <% end %>

      </div>

    <!-- navigation -->

    <%= link_to root_path do %>
      <div class="home_button"></div>
    <% end %>
    <%= link_to login_path, :method => 'delete' do %>
      <div class="signout_button"></div>
    <% end %>
    <%= link_to groups_path do %>
      <div class="friends_button"></div>
    <% end %>
    <%= link_to chores_path do %>
      <div class="chores_button"></div>
    <% end %>

    </div>
  </div>
</div>
