<div class="form">
  <div class="banner"><h1 class="bannerHead">Pick Chore</h1></div>

    <div class="formBackground">
      <div class="fill"></div>
      <div class="buffer">

  <%= form_tag chores_pick_chore_path do %>
        <%= hidden_field_tag :id, params['id'] %>
        <% @chores.each do |chore| %>

            <div class="chore_button">
              <%= check_box_tag 'chore_id[]', chore.id %>
              <%= cl_image_tag(chore.image, :width=>58, :height=>59, :gravity=>"face", :crop=>"crop", :class=>"img_thumb") unless chore.image.nil?%>
                <p class="chore_p_name"><%= chore.name %></p>
                <p class="chore_p_description"><%= chore.description %></p>
                <p class="chore_p_reward"><%= chore.reward %></p>
            </div>

        <% end %>
        <%= submit_tag 'Assign' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
